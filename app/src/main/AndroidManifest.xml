<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.cbg.testwebview">

    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!-- for mta statistics -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:allowBackup="false">

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:launchMode="singleInstance"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="sdksample"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ShowFromWXActivity"
            android:label="@string/app_name"
            android:theme="@style/MMTheme.Basic"/>

        <activity android:name=".SubscribeMiniProgramMsgActivity"
            android:label="@string/subscribe_message"
            android:theme="@style/MMTheme.Basic"/>

        <activity android:name=".SubscribeMessageActivity"
            android:launchMode="singleTask" android:exported="true"
            android:label="@string/subscribe_message_title"/>

        <activity android:name=".UserInfoActivity"
            android:label="@string/app_name"
            android:theme="@style/MMTheme.Basic"/>


        <service android:name="cn.cbg.testwebview.MusicService" android:exported="true"/>
        <service android:name="cn.cbg.testwebview.DownloadService" android:exported="true"/>

    </application>

</manifest>